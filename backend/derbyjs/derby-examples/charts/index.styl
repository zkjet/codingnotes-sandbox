body
  padding-top: 50px

svg
  margin: 10px

h1
  transition: color .5s

.charts
  width: 50%
  float:left
.inputs
  margin: 50px 20px;
  width: 40%
  float: left
  .datum
    float:left
    clear:left
  .d-label
    float:left
    width: 30px
    text-align: right
  .d-input
    float:left
    margin-left: 10px
  .button
    margin: 2px
    padding 2px 8px
    background: salmon
    color: white
    border: none
    border-radius: 3px
  .plus
    background: steelblue
  .add
    margin-left: 10px
    float:left
    clear:left

.btn-toolbar
  margin-bottom: 20px

.connection
  position: absolute
  text-align: center
  top: 0
  left: 0
  width: 100%
  height: 0
  z-index: 2000
.connection > .alert
  border-top: 0
  border-top-left-radius: 0
  border-top-right-radius: 0
  display: inline-block
